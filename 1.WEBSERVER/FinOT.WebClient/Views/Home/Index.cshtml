@model RAP.WebClient.Models.AppModel
<!DOCTYPE html>
<html ng-controller="mainController">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>{{Page.title()}}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon.png")" />
    <!--[if IE]><link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/favicon.ico")"/><![endif]-->
    @Styles.Render("~/Content/fonts.css")
    @Styles.Render("~/Content/styles.css")
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    <script type="text/javascript">
        @*sessionStorage.setItem("UserDisplayName", "@string.Format("{0} {1}", Model.Header.User.FirstName, Model.Header.User.LastName)");
        sessionStorage.setItem("username", "@Model.Header.User.Username");*@
        sessionStorage.setItem("apibaseurl", "@Model.AppDetails.ApiBaseURL");
    </script>   
    <base href="/">
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>

    </head>
    <body>
        <div id="site-header">
            <div class="top-header">
                <div class="container outer-container">OAKLAND HOUSING & COMMUNITY DEVELOPMENT</div>
            </div>

            <div class="bottom-header">
                <div class="container outer-container">
                    <div id="sitetitle-wrapper">
                        <h1 id="sitetitle"><a href="#">City of Oakland</a></h1>
                        <div class="description">Rent Adjustment  <br />Program</div>
                    </div>

                    <div class="get-assistance"><strong>Get assistance</strong> &nbsp;&nbsp;(510) 000-0000</div>


                    <a href="javascript:void();" class="menu-toggle"><span></span></a>
                    <div class="navigation-wrapper">
                        <div class="mb-translation-wrapper">
                            Choose language
                        </div>

                        <div class="mb-site-search-wrapper">
                            Search
                        </div>

                        <div class="site-navigation">
                            <ul>
                                <li><a href="#about">About</a></li>
                                <li><a href="#issues">Issues</a></li>
                                <li><a href="#resources">Resources</a></li>
                                <li><a href="#petition Forms">Petition Forms</a></li>
                                <li><a href="#cases-database">Cases Database</a></li>
                            </ul>
                        </div>

                        <div class="account-details-wrapper">
                            <a href="#logout" class="logout">Log out</a>

                            <ul class="account-details clearfix">
                                <li class="search"><a href="#" title="Search">Search</a></li>
                                <li class="translate"><a href="#" title="Translate">Translate</a></li>
                                <li class="signedin"><a href="#">Hi, Sharon</a></li>
                            </ul>
                        </div>

                        <div class="mb-account-details-wrapper">
                            <a href="#login" class="btn-link login">Log in</a>
                        </div>
                    </div>

                </div><!-- .container -->
            </div><!-- .bottom-header -->
        </div>

            @*modal dialog has z-index of 1050 so set the z-index of inform more than that to bring it to front.*@
            <div inform class="inform-animate inform-fixed inform-shadow" style="z-index: 1051"></div>
            <div id="body" ng-view class="container-fluid"></div>
            <footer style="margin-top: 3em;">
                @*<nav class="navbar navbar-fixed-bottom row-footer-finance" role="navigation">
                    <div class="container-fluid">
                        <span style="font-size: 0.8em; line-height: 2em;" class="pull-right">Rent Adjustment Program: Service Allocation | Deployment Date: @Model.AppDetails.DeploymentDate</span>
                    </div>
                </nav>*@
            </footer>
            @Scripts.Render("~/bundles/angular")
            @Scripts.Render("~/bundles/angularApp")
            @Scripts.Render("~/bundles/angularTemplates")

    </body>
    </html>
